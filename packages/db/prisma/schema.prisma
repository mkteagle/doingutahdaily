// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String?
  content     String    @db.Text // MDX content
  coverImage  String?
  author      String    @default("Doing Utah Daily")
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  categories  PostCategory[]

  @@index([publishedAt])
  @@index([slug])
}

model PostCategory {
  id     String @id @default(cuid())
  postId String
  name   String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, name])
  @@index([postId])
}

model SocialPost {
  id           String   @id
  platform     String   // "instagram" | "tiktok"
  mediaUrl     String?
  thumbnailUrl String?
  caption      String?  @db.Text
  permalink    String
  mediaType    String?  // "IMAGE" | "VIDEO" | "CAROUSEL"
  timestamp    DateTime
  cachedAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([platform])
  @@index([timestamp])
}

model Event {
  id          String    @id
  title       String
  description String?   @db.Text
  startTime   DateTime
  endTime     DateTime?
  location    String?
  categories  String[]  @default([])
  sourceId    String?   // Google Calendar event ID
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([startTime])
  @@index([sourceId])
}
